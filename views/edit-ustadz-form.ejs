<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/css/stylesheet.css">
  <title>Add ustadz</title>
</head>
<body>
  <%- include("./partials/navbar.ejs") %>

  <h2>Add ustadz</h2>
  <%if(error){%> 
    <p><%= error %></p>
  <% } %>
  <form action="/ustadz/edit/<%= ustadzData.id %>" method="POST">
   <label for="first_name">First Name</label>
    <br>
    <input type = "text" name="first_name" value = "<%= ustadzData.first_name %>">

    <br>

    <label for="last_name">Last Name</label>
    <br>
    <input type = "text" name="last_name" value = "<%= ustadzData.last_name %>">

    <br>

    <%if (ustadzData.gender === "male"){%>
      <input type="radio" name="gender" value="male" checked = "checked">
      <label for="gender">Male</label>
      <input type="radio" name="gender" value="female">
      <label for="gender">Female</label>
    <%}else{%>
      <input type="radio" name="gender" value="male" >
      <label for="gender">Male</label>
      <input type="radio" name="gender" value="female"checked = "checked">
      <label for="gender">Female</label>
    <%}%>


    
    <br>

    <label for="skill">Skill</label>
    <br>
    <select name="skill" >
      <option selected disabled>Select</option>
      <%skill.forEach(function(el){ %>
        <% if(el.toLowerCase() === ustadzData.skill){ %>
          <option value="<%=el%>" selected><%=el%></option>
        <% } else {%>
          <option value="<%=el%>"><%=el%></option>
        <%}%>
      <%})%>
    </select>


    <br>

    <label for="phone_number">Phone Number</label>
    <br>
    <input type = "text" name="phone_number" value = "<%= ustadzData.phone_number %>">

    <br>

    <label for="email">Email</label>
    <br>
    <input type = "email" name="email" value = "<%= ustadzData.email %>">

    <br>
    <br>

    <input type="submit" value="Submit">
  
  </form>
</body>
</html>